{
    "manifest_version": 2,
    "name": "Supreme Tools",
    "version": "2.0.1",
    "default_locale": "en",
    "description": "Hand-bot",
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "background": {
        "page": "background/background.html",
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Supreme_Hand",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "inject.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "dist/*",
        "dist/**/*"
    ]
}